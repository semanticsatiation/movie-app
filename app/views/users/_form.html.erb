<%= form_for(@user) do |u| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
    <ul>
      <p>
        <%= u.label :name %>
        <%= u.text_field :name %>
      </p>
      <p>
        <%= u.label :username %>
        <%= u.text_field :username %>
      </p>
      <p>
        <%= u.label :email %>
        <%= u.text_field :email %>
      </p>
      <p>
        <%= u.label :password %>
        <%= u.password_field :password %>
      </p>
      <p>
        <%= u.label :password_confirmation, "Confirm Password" %>
        <%= u.password_field :password_confirmation %>
      </p>
    </ul>
    <p>
      <%= u.submit %> | <%= link_to("Cancel", root_path) %> |
    </p>
  </fieldset>
<% end %>
