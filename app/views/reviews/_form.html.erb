<%= render "shared/errors", object: @review %>

<fieldset>
  <ul>
    <%= form_for([@movie, @review]) do |f|%>
    <p>
      <%= f.label :stars %><br/>
      <%= f.select :stars, Review::RANGE %> / ⭐ ⭐ ⭐ ⭐ ⭐
    </p>
    <p>
      <%= f.label :comment %><br/>
      <%= f.text_area :comment, cols: 39, rows: 5, placeholder: "What did you think of #{@movie.title}?"%>
    </p>
    <p>
      <%= f.submit 'Post Review'%> |
      <%= link_to("Cancel", movie_path(@movie)) %>
    </p>
    <% end %>
  </ul>
</fieldset>
