<p>
  | <%= link_to("Write a review", new_movie_review_path(@movie))  %> |
</p>
<ul>
  <% @reviews.each do |review|%>
  <p>
    <header id="review_header">
      <%= link_to(review.user.name, review.user) %> gave it <%= Review::STARS[review.stars] %> <%= "star".pluralize(review.stars) %>:
      <h3>"<%= review.comment %>"</h3>
    </header>
  </p>
  <h4>- review created <%= time_ago_in_words(review.created_at) %> ago and last updated <%= time_ago_in_words(review.updated_at) %> ago</h4>
  <% if current_user?(review.user) || current_user_admin? %>
    <%= link_to("edit comment", edit_movie_review_path(review.movie, review.id)) %> |
    <%= link_to("delete comment", movie_review_path(review.movie, review.id), method: :delete,
          data: {confirm: "Are you sure you want to delete your comment for #{@movie.title}?"}) %><br>
  <% end %>
  <h3> - - - - - - - - - - - - - - </h3>

  <% end %>
</ul>
