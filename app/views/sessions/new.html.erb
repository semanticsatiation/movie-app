<header>
  <h1>Sign in!</h1>
</header>
<fieldset>
  <ul>
    <%= form_tag(session_path) do %>
      <p>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, required: true, autofocus: true %>
      </p>
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true, autofocus: true %>
      </p>
      <p>
        <%= submit_tag "Sign in"%>
      </p>
    <% end %>
  </ul>
<h3>Don't have an account? <%= link_to("Create one!", new_user_path) %></h3>
</fieldset>
